@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

<div class="wrapper">

    <div class="logo">
        <img src="~/images/CAA.png" alt="logo">
    </div>
    <div class="reset-password-container">
        <div class="text-center mt-4 name" style="font-size: 24px; font-weight: bold;">
            Reset Password
        </div>
        <butaton type="button" class="btn-sm btn-warning" id="requirements-btn">
            <i class="fa fa-exclamation-circle"></i>
        </butaton>
    </div>

    <form class="mt-3" method="post">
        <hr />
        <div class="form-field d-flex align-items-center">
            @*<label for="Input_Email">Email</label>*@
           <input asp-for="Input.Email" class="form-control" autocomplete="on" aria-required="true" placeholder="Email"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-field d-flex align-items-center">
            @*<label for="Input_Password">New Password</label>*@
            <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="New Password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-field d-flex align-items-center">
            @*<label for="Input_ConfirmPassword">Confirm New Password</label>*@
            <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="Confirm Password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <input type="hidden" />

        <button type="submit" id="ChangePass" class="w-100 btn btn-lg btn-primary btn mt-3">Reset Password</button>
    </form>


    <!-- Add a modal for the password requirements -->
    <div class="modal" tabindex="-1" role="dialog" id="requirements-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Password Requirements</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="password-requirements">
                        <li>
                            <i class="fas fa-hashtag"></i> - Passwords must contain at least one digit (0-9).
                        </li>
                        <li>
                            <i class="fas fa-text-width"></i> - Include at least one lowercase letter (a-z).
                        </li>
                        <li>
                            <i class="fas fa-keyboard"></i> - Have at least one non-alphanumeric character (e.g., punctuation mark or symbol).
                        </li>
                        <li>
                            <i class="fas fa-text-height"></i> - Contain at least one uppercase letter (A-Z).
                        </li>
                        <li>
                            <i class="fas fa-ruler-horizontal"></i> - Have a minimum length of 6 characters, and include at least 1 unique character.
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add JavaScript to handle the modal functionality
    document.getElementById('requirements-btn').addEventListener('click', function () {
        document.getElementById('requirements-modal').classList.add('show');
        document.getElementById('requirements-modal').style.display = 'block';
    });

    document.querySelector('#requirements-modal .close').addEventListener('click', function () {
        document.getElementById('requirements-modal').classList.remove('show');
        document.getElementById('requirements-modal').style.display = 'none';
    });
</script>
