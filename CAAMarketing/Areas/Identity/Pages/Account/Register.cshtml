@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper">
    <div class="logo">
        <img src="~/images/CAA.png" alt="logo">
    </div>
    <div class="text-center mt-4 name">
        Create a new account.
    </div>
    <form class="mt-3" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
            @*<label asp-for="Input.Email"></label>*@
            <span asp-validation-for="Input.Email" class="text-danger far fa-user"></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
            @*  <label asp-for="Input.Password"></label>*@
            <span asp-validation-for="Input.Password" class="text-danger far fa-user"></span>
        </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
            @*<label asp-for="Input.ConfirmPassword"></label>*@
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger far fa-user"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn mt-3">Register</button>
    </form>
</div>
