@page
@model ChangePasswordModel
@{
    Layout = "_ChangePasswordLayout";
}

<h2>@ViewData["Title"]</h2>
<div class="wrapper">

    <div class="logo">
        <img src="~/images/CAA.png" alt="logo">
    </div>
    <div class="text-center mt-4 name" style="font-size: 24px; font-weight: bold;">
        Change Password
</div>
            <form class="mt-3" method="post">
                <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Old Password" />
            <span asp-validation-for="Input.OldPassword" class="text-danger far"></span>
            </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.NewPassword" class="form-control" aria-required="true" placeholder="New Password" />
            <span asp-validation-for="Input.NewPassword" class="text-danger far"></span>
            </div>
        <div class="form-field d-flex align-items-center">
            <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger far"></span>
            </div>
        <button type="submit" id="ChangePass" class="w-100 btn btn-lg btn-primary btn mt-3">Change Password</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    #ChangePass {
            display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease-in-out;
            transform: translateY(0);
            height: 50px;
    }

    #ChangePasst:hover {
        transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
    }

    .form-control {
        width: 100%;
        border-radius: 25px;
        transition: all 0.5s ease-in-out;
    }

    .form-control:focus {
        width: 80%;
    }
</style>