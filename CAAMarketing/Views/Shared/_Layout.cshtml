<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAAMarketing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CAAMarketing.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="website icon" type="png" href="/images/Caamarketing192.png">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>


    <script>
        function redirectToEdit(itemId) {
            window.location.href = "/OrderItems?ItemID=" + itemId;
        }
    </script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        function redirectToSilenceNotif(itemId1) {
            window.location.href = "/Inventories/SilencingToastrNottifPopup/" + itemId1
        }
    </script>
    <script>
        function redirectToRecoverNotif(itemId2) {
            window.location.href = "/Inventories/RecoveringToastrNottifPopup/" + itemId2
        }
    </script>

    @*for autocomplete*@
    @RenderSection("Styles", required: false)
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-blue border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/CAANiagara_CMYKHorzLogo-removebg-preview.png" asp-append-version="true" alt="Logo" class="logo-standard">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse nav-center collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="inventoryMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manage Inventory
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="inventoryMenu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Items" asp-action="Index">Inventory</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="InventoryTransfers" asp-action="Index">Transfers</a></li>
                                @*<li><a class="dropdown-item" asp-area="" asp-controller="Inventories" asp-action="InventoryReport"> Inventory Reports</a></li>*@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Locations" asp-action="Index">Locations</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="inventoryMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Inventory Reports
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="inventoryMenu">
                            <li><a asp-controller="Inventories" asp-action="InventoryReport" class="dropdown-item">Full Inventory</a></li>
                            <li><a asp-controller="Inventories" asp-action="InventoryLevelsReport" class="dropdown-item">Inventory Levels</a></li>
                            <li><a asp-controller="Inventories" asp-action="InventoryCostsReport" class="dropdown-item">Inventory Costs</a></li>
                            <li> <a asp-controller="Inventories" asp-action="InventoryEventsReport" class="dropdown-item">Inventory Events</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="eventMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manage Events
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="eventMenu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Events" asp-action="Index">Events</a></li> 
                                <li><a class="dropdown-item" asp-area="" asp-controller="EventLogs" asp-action="Index">Event Logs</a></li>
                                    
                            </ul>
                        </li>
                        
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Index">Maintain Employees</a></li>
                                        <li class="nav-item dropdown-submenu">
                                            <a class="dropdown-item" href="#" style="color:black">Archives</a>
                                            <ul class="dropdown-submenu dropdown-menu">
                                                <li><a class="dropdown-item" asp-area="" asp-controller="Archives" asp-action="Index">Items</a></li>
                                                <li><a class="dropdown-item" asp-area="" asp-controller="Archives" asp-action="TransferArchivesIndex">Transfers</a></li>
                                            </ul>
                                        </li>
                                    <!-- Add new Logs item with submenu here -->
                                    <li class="nav-item dropdown-submenu">
                                        <a class="dropdown-item" href="#" style="color:black">Discrepancy Logs</a>
                                        <ul class="dropdown-submenu dropdown-menu">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="MissingItemLogs" asp-action="Index" >Events</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="MissingTransitItems" asp-action="Index">Transfers</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        } 
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
</nav>
</header>
@{
    var current = this.ViewContext.RouteData.Values["controller"] as string ?? "Home";
        if (current == "Privacy")
        {
            <div>

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        }
        else
        {
            <div class="container">

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        }
        }


<footer class="footers">
        
  	 <div class="conts">
        
  	 	<div class="rows">
  	 		<div class="footerc">
                     <small>Copyright &copy; CAA Niagara - 2023</small>
  	 		</div>
  	 	</div>
  	 </div>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")
</body>
</html>




                     