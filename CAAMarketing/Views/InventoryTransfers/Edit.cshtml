@model CAAMarketing.Models.InventoryTransfer

@{
    ViewData["Title"] = "Edit";
}
<div class="cont">
    <div class="deimage">

        <h1>Edit @*:(@Model.Item.Name)*@</h1>

        <h4>Inventory Transfer</h4>
        <hr />
        <div class="roe d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RowVersion" />

                    <div class="form-group">
                        <label asp-for="ItemId" class="control-label required-label"></label>
                        <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId" required></select>
                        <span asp-validation-for="ItemId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FromLocationId" class="control-label required-label"></label>
                        <select asp-for="FromLocationId" class="form-control" asp-items="ViewBag.FromLocationId" required></select>
                        <span asp-validation-for="FromLocationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToLocationId" class="control-label required-label"></label>
                        <select asp-for="ToLocationId" class="form-control" asp-items="ViewBag.ToLocationId" required></select>
                        <span asp-validation-for="ToLocationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label required-label"></label>
                        <input asp-for="Quantity" class="form-control" required />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransferDate" class="control-label required-label"></label>
                        <input asp-for="TransferDate" class="form-control" required />
                        <span asp-validation-for="TransferDate" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">

                        <input type="submit" value="Save" class="btn-submit" />
                        <div class="tooltip"> <a asp-action="Index"> <img src="~/images/icons8-go-back-24.png" alt="Back Icon" /> <span class="tooltiptext">Back</span></a> </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
