        if (message) {
            console.log(message);
            $('#addMissingItemTransfer').trigger('click');
        }
    </script>

    <script src="~/js/refreshDDL.js"></script>

    <script type="text/javascript">
        $('#submitMissingItemLogCreate1').click(function (event) {
            event.preventDefault();
            var form = $('#createMissingItemTransferForm');
            if (form.valid()) {
                $.ajax({
                    type: "POST",
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function () {
                        $('#addMissingItemTransferModal').modal('hide');
                        window.location.reload();
                    },
                    error: function () {
                        alert("Create Failed.  There was a problem adding the record.");
                    }
                });
            }
            return false;
        });
        $('#addMissingItemTransferModal').on('hide.bs.modal', function () {
            $('#createMissingItemTransferForm').find("input[type=text], textarea, select").val("");//to clear the data in the popup
        });
    </script>

}


