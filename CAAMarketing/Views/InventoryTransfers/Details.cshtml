@model CAAMarketing.Models.InventoryTransfer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Details for <u>@Html.DisplayFor(model => model.Item.Name)</u></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FromLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FromLocation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ToLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToLocation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransferDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransferDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="link-action" title="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <div class="tooltip"> <a  asp-action="Index"> <img src="~/images/icons8-go-back-24.png" alt="Back Icon" /> <span class="tooltiptext">Back</span></a> </div>
</div>
