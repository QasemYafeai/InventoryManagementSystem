@model IEnumerable<CAAMarketing.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <!-- Help Section -->
<div class="container my-3">
    <button type="button" class="btn btn-info btn-color-Create" data-bs-toggle="modal" data-bs-target="#archivesPageHelpModal">
        Need Help? Click here
    </button>
    <!-- Help Modal -->
<div class="modal fade" id="archivesPageHelpModal" tabindex="-1" aria-labelledby="archivesPageHelpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="archivesPageHelpModalLabel">How to use the Archives page</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="list-group">
                    <div class="list-group-item">
                        <i class="bi bi-filter-square text-primary"></i> <strong>Filter:</strong> Click the "Filter" button to access filtering options for the archives page. Use this feature to generate a filtered view based on your filter criteria.
                    </div>
                    <div class="list-group-item">
                        <i class="bi bi-search text-success"></i> <strong>Quick Search:</strong> Use the search box on the top-right corner to quickly search for items by their name. This allows you to find items without using the filter option.
                    </div>
                    <div class="list-group-item">
                        <i class="bi bi-arrow-up-down text-warning"></i> <strong>Sorting:</strong> Click on the column headers (Item, UPC, Location, Quantity, Cost, Employee) to sort the archives page by the respective criteria.
                    </div>
                    <div class="list-group-item">
                        <i class="bi bi-recycle text-info"></i> <strong>Recover Items:</strong> Click the "Recover" link next to an item to recover it from the archives.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>
    <div class="form-horizontal">
        <button class="btn btn-success @(ViewData["Filtering"])"  type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter" title="Click this to filter">
            <i>Filter</i>
