@model IEnumerable<CAAMarketing.Models.ItemReservation>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
        <a asp-action="Index" asp-controller="Inventories" class="btn btn-link">Back to Inventory</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Event.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReservedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LogBackInDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @if (item.ReturnDate.HasValue)
                        {
                            @Html.DisplayFor(modelItem => item.LogBackInDate)
                        }
                        else
                        {
                            <span class="text-danger">Not logged back in</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Log Back In</a>
                        @if (!item.ReturnDate.HasValue)
                        {
                            <form asp-action="LogBackIn" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to log this item back in?');">
                                <input type="submit" value="Log Back In" class="btn btn-link text-danger" />
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
