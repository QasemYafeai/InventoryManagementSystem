@model IEnumerable<CAAMarketing.ViewModels.EmployeeAdminVM>

@{
    ViewData["Title"] = "Employee Index";
}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>


<form asp-action="Index" method="get">
    
    <div class="container col-md-12 col-lg-10">
        <!-- Help Section -->
        <div class="d-flex justify-content-start mb-3">
            <button type="button" class="btn btn-info btn-color-Create" data-bs-toggle="modal" data-bs-target="#employeeAdminPageHelpModal">
                Need Help? Click here
            </button>
        </div>
        <div class="text-danger">@TempData["message"]</div>
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="table-title d-flex justify-content-between align-items-center">
                            <h1>Users</h1>
                            <div class="col-xs-7">
                                <a asp-action="Create" title="Click here to create new Employee" class="btn btn-primary btn-color-Create">
                                    <i class="material-icons">&#xE147;</i>
                                    <span>Create New Employee</span>
                                </a>
                                <div class="search-box">
                                    <div class="input-group">
                                        <input type="text" id="ManagementSearch" class="form-control" placeholder="Search by there Name or email">
                                        <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserRoles)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)<br />
                                    Email: @Html.DisplayFor(modelItem => item.Email)<br/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    <span class="password-wrapper">
                                        <input type="password" class="form-control password-input" value="@Html.DisplayFor(modelItem => item.Password)" readonly>
                                        <button type="button" class="btn btn-secondary password-toggle" title="Show/Hide Password">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </span>
                                </td>

                                <td>
                                    @{
                                        foreach (var r in item.UserRoles)
                                        {
                                            @:  @r <br />
                                        }
                                    }
                                </td>
                                <td>
                                    @(item.Active ? "Active" : "Inactive")
                                    <span class="status text-success @(!item.Active ? "hide" : "")">&bull;</span>
                                    <span class="status text-danger @(item.Active ? "hide" : "")">&bull;</span>
                                </td>
                                <td>
                                    <a asp-action="Edit" title="Click this to edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-action="ResetPassword" title="Click this to reset password" asp-route-id="@item.ID">Reset Password</a>

                                    @if (item.NumberOfPushSubscriptions > 0)
                                    {
                                        @:| @{
                                            <a asp-controller="WebPush" asp-action="Send" asp-route-id="@item.ID">Send Notification</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<!-- Help Modal -->
<div class="modal fade" id="employeeAdminPageHelpModal" tabindex="-1" aria-labelledby="employeeAdminPageHelpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeAdminPageHelpModalLabel">How to use the Employee Administration page</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="list-group">
                    <div class="list-group-item">
                        <i class="bi bi-plus-circle text-primary"></i> <strong>Create New Employee:</strong> Click the "Create New Employee" button to add a new employee to the system.
                    </div>
                    <div class="list-group-item">
                        <i class="bi bi-search text-success"></i> <strong>Quick Search:</strong> Use the search box on the top-right corner to quickly search for employees by their name or email.
                    </div>
                    <div class="list-group-item">
                        <i class="bi bi-pencil text-warning"></i> <strong>Edit Employee Details:</strong> Click the "Edit" link next to an employee's name to modify their information, including roles, contact details, and active status.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Activate tooltips
        $('[data-toggle="tooltip"]').tooltip();

        // Filter table rows based on searched term
        $("#ManagementSearch").on("keyup", function () {
            var term = $(this).val().toLowerCase();
            $("table tbody tr").each(function () {
                $row = $(this);
                var name = $row.find("td:nth-child(1)").text().toLowerCase(); // Changed to the first column (Location Name)
                console.log(name);
                if (name.search(term) < 0) {
                    $row.hide();
                } else {
                    $row.show();
                }
            });
        });
    });
</script>

<script>
    $(document).ready(function () {
        // Show/hide password
        $(".password-toggle").click(function () {
            var passwordInput = $(this).closest(".password-wrapper").find(".password-input");
            var passwordFieldType = passwordInput.attr("type");

            if (passwordFieldType === "password") {
                passwordInput.attr("type", "text");
                $(this).html("<i class='fa fa-eye-slash'></i>");
            } else {
                passwordInput.attr("type", "password");
                $(this).html("<i class='fa fa-eye'></i>");
            }
        });
    });
</script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
