@model IEnumerable<CAAMarketing.Models.MissingItemLog>




<div class="container-fluid">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title d-flex justify-content-between align-items-center">
                    <h1>Discrepancy logs</h1>
                </div>
                <table class="table table-hover">
                    <thead class="thead-light">
        <tr>
                        <th>Item</th>
                        <th>Location</th>
                        <th>Event</th>
                        <th>Quantity Missing</th>
            <th>Reason</th>
            <th>Date</th>
            
           
                        
                        
                        <th>Employee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var missingItem in Model)
        {
                        <tr>
                            <td>@missingItem.Item.Name</td>
                            <td>@missingItem.Location.Name</td>
                            <td>@missingItem.Event.Name</td>
                            <td>@missingItem.Quantity</td>
                            <td>@missingItem.Reason</td>
                            <td>@missingItem.Date</td>
                            
                            <td>@missingItem.Employee.FullName</td>
                            <td><a asp-action="Details" title="Click this to go to details" class="padding-for-actions" asp-route-id="@missingItem.ID">Details</a> </td>
                            
            </tr>
        }
    </tbody>
</table>
        </div>
    </div>
</div>


