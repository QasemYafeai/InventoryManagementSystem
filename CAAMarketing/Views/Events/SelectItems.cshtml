@{
    int[] ItemNotAllowed = new int[0];

    foreach(var item1 in Model)
    {
        int count = 0;
        foreach(var res in ViewBag.itemResOverBookingCaution)
        {
            foreach(var inv in item1.Inventories)
            {
                if (inv.ItemID == res.ItemId && inv.LocationID == res.LocationID)
                {
                    count += 1;
                    int qty = inv.Quantity - res.Quantity;
                    if(qty == 0)
                    {
                        ItemNotAllowed = ItemNotAllowed.Append(inv.ItemID).ToArray();
                    }
                }
            }
        }
    }
}

