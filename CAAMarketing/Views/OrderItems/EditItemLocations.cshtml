@model CAAMarketing.Models.Inventory

@{
    ViewData["Title"] = "Edit";
}
<div class="cont" style="padding-top:25px; padding-bottom:25px">
    <div class="deimage">
        @*<h2>Update Order for: @Model.Item.Name</h2>*@

        <hr />
        <form asp-action="EditItemLocations">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="deimage2">
                <div class="col-md-12">
                    <input type="hidden" name="ItemID" value="@Model.ItemID" />
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" required style="border-color: red" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        </br>
                        <input type="submit" title="Click this to save" value="Save" class="btn btn-primary" /> |
                        <a href='@ViewData["returnURL"]' title="Click this to go back to the item details" class="padding-for-actions div-back">Back</a> |
                        <a asp-controller="OrderItems" title="Click this to go back the Inventory List" class="padding-for-actions div-back" asp-action="Index" class="">Back to Inventory</a>
                    </div>
                </div>
            </div>
        </form>





    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
