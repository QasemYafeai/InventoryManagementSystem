@model CAAMarketing.ViewModels.UserVM

@{
    ViewBag.Title = "Edit Roles";
}


<div class="cont">
    <div class="deimage">
    <h2>Edit Role Assignments</h2>

<form asp-action="Edit">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="deimage2">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly="readonly"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserRoles" class="control-label"></label>
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<CAAMarketing.ViewModels.RoleVM> roles = ViewBag.Roles;
                            foreach (var role in roles)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
                                           name="selectedRoles"
                                           value="@role.RoleName"
                                           @(Html.Raw(role.Assigned ? "checked=\"checked\"" : "")) />
                                    @role.RoleName @:&nbsp;&nbsp;
                                @:</td>
                            }
                        @:</tr>
                        }
                    </table>
                    </br>
                     <input type="submit" id="btnSubmit" title="Click here to save the changes" value="Save" class="btn btn-primary" />
                    <div class="tooltip"> <a href="~/UserRoles" > <img src="~/images/icons8-go-back-24.png" alt="Back Icon"/> <span class="tooltiptext">Back</span></a> </div><br/>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>